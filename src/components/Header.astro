---
import ButtonLink from "../components/ButtonLink.astro";
---

<div class="container">  
  <header id="header">
    <div class="content">
      <h1>
      <span>Hi, I am Aravind.</span>
        <span><span class="accent">Full-stack</span> Developer!</span>
      </h1>
      <p class="description">
        Iâ€™m a Full-Stack Developer specializing in React.js, Next.js, Node.js,
        and database management. I build scalable, high-performance web
        applications, robust back-end architecture, and efficient API
        integrations.
      </p>
      <div class="button-container">
        <ButtonLink href="/projects" text="View projects" variant="secondary"/>
        <ButtonLink href="/resume.pdf" text="Download resume" isDownload={true}/>
      </div>
    </div>
    <img src="/images/me.png" />
  </header>
</container>

<style>
   #header {
    display: grid;
    grid-template-columns: 540px 1fr;
    justify-items: center;
    gap: 80px;
    align-items: center;
    margin-top: 60px;

    img {
        width: 200px;
        margin-bottom: 10px;
    }

    h1 {
      font-size: 44px;
      display: flex;
      flex-direction: column;
      margin-bottom: 20px;

      .accent {
        color: var(--primary);
      }
    }

    .button-container {
      display: flex;
      gap: 10px;
    }

    .description {
      line-height: 28px;
      color: var(--dark);
      margin-bottom: 30px;
    }

    @media (max-width: 1000px) {
      & {
        grid-template-columns: 1fr;
        grid-template-rows: auto;
        gap: 40px;

        img {
          grid-row: 1;
        }
      }
    }

    @media (max-width: 600px) {
      .button-container {
        flex-direction: column;
      }
    }
  }

  .container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 60px;

    @media screen and (max-width: 1000px) {
      & {
        padding: 0 24px;
    }
  }
</style>